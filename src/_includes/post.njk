---
layout: base.njk
---
<!-- Hero -->
<section class="relative overflow-hidden">
  <div class="mx-auto max-w-[1200px] px-6 py-14 md:py-20 md:pb-2">
    <div class="relative">
      <!-- sweeping scanline -->
      <div class="pointer-events-none absolute -top-10 left-0 right-0 h-40 md:h-52 overflow-visible">
        <div
          class="h-[2px] w-1/3 bg-gradient-to-r from-transparent via-[var(--accent)] to-transparent opacity-80 animate-[scanX_3.6s_ease-in-out_1.2s_infinite]">
        </div>
      </div>
    </div>
</section>

<!-- Post Content -->
<main class="relative">
  <div class="mx-auto max-w-[1200px] px-6 pb-24 md:pb-32">
    <article>
      <!-- Post Header -->
      <header class="mb-12">
        <div class="flex items-center gap-3 mb-4">
          <span class="font-tech text-[12px] uppercase tracking-[0.2em] text-[var(--accent)]">{{ category }}</span>
          <span class="h-[1px] w-6 bg-[var(--border)]"></span>
          <span class="font-tech text-[12px] uppercase tracking-[0.2em] text-[var(--muted)]">{{ date | postDate }}</span>
        </div>
        <h1 class="font-display text-3xl md:text-4xl lg:text-5xl font-bold leading-tight mb-6">
          {{ title }}
        </h1>
        {% if image %}
        <div class="relative overflow-hidden rounded-xl mb-8">
          <img class="w-full max-h-[450px] object-cover"
            src="{{ image }}"
            alt="{{ imageAlt }}" />
          <div class="absolute inset-0 bg-gradient-to-t from-[var(--bg)]/30 via-transparent to-transparent"></div>
        </div>
        {% endif %}
      </header>

      <!-- Post Body -->
      <div class="prose font-body text-lg">
        {{ content | safe }}
      </div>

      <!-- Back link -->
      <div class="mt-16 pt-8 border-t border-[var(--border)]">
        <a href="/" class="font-tech text-[12px] text-[var(--fg)]/80 hover:text-[var(--accent)] transition-colors">
          ‚Üê Back to all posts
        </a>
      </div>
    </article>
  </div>
</main>
