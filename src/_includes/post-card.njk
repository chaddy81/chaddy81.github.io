<article
  class="post-card group border border-[var(--border)] rounded-xl overflow-hidden bg-[var(--surface)]/50 hover:bg-[var(--surface)]/70 transition-all duration-300 hover:shadow-[0_0_60px_rgba(100,255,218,0.06)] cursor-pointer reveal"
  data-reveal data-category="{{ post.data.category }}" style="transition-delay: {{ index | staggerDelay }}ms">
  <a href="{{ post.url }}" class="block">
    <div class="relative overflow-hidden">
      <img class="h-52 w-full object-cover transition-transform duration-500 group-hover:scale-[1.03]"
        src="{{ post.data.image }}"
        alt="{{ post.data.imageAlt }}" />
      <div class="absolute inset-0 bg-gradient-to-t from-[var(--bg)]/50 via-transparent to-transparent"></div>
    </div>
    <div class="p-5">
      <div class="flex items-center gap-3">
        <span class="h-[1px] w-6 bg-[var(--border)]"></span>
      </div>
      <h3 class="mt-2 font-display text-xl leading-snug group-hover:text-[var(--accent)] transition-colors">
        {{ post.data.title }}
      </h3>
      <span class="font-tech text-[11px] uppercase tracking-[0.2em] text-[var(--muted)] mb-1">{{ post.data.date | postDate }}</span>
      <p class="mt-2 font-body text-[15px] text-[var(--muted)]">
        {{ post.data.description }}
      </p>
      <div class="mt-4 flex items-center justify-between">
        <span
          class="font-tech text-[12px] text-[var(--fg)]/80 group-hover:text-[var(--accent)] transition-colors">Read
          â†’</span>
      </div>
    </div>
  </a>
</article>
